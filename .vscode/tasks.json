{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Blog post",
            "type": "shell",
            "command": "touch node/blog/content/posts/`date +%Y%m%d-%H%M`.mdx; code . node/blog/content/posts/`date +%Y%m%d-%H%M`.mdx",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "promptOnClose": false
        }
    ]
}
